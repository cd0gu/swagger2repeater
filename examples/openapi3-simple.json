{
  "openapi": "3.0.1",
  "info": {
    "title": "Simple OpenAPI 3.0 API",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "https://api.example.com/v2" }
  ],
  "paths": {
    "/items/{itemId}": {
      "get": {
        "summary": "Get item",
        "parameters": [
          {
            "name": "itemId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "include_meta",
            "in": "query",
            "required": false,
            "schema": { "type": "boolean" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update item",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated"
          }
        }
      }
    }
  }
}
